<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <div class="d-flex align-items-center justify-content-center vh-100 bg-light">
                        <div class="text-center">
                            <h3 class="mb-3">未授权访问</h3>
                            <p class="text-muted mb-4">您需要登录才能访问此页面。</p>
                            <a href="/login" class="btn btn-primary">用户登录</a>
                            <a href="/admin/login" class="btn btn-outline-secondary ms-2">管理员登录</a>
                        </div>
                    </div>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>未找到</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="container mt-5 text-center">
                    <h3>404</h3>
                    <p>抱歉，未找到对应页面。</p>
                    <a href="/" class="btn btn-link">返回首页</a>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
