@inherits LayoutComponentBase
@inject IJSRuntime JS
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>智能学习分析系统</PageTitle>

<div class="page-wrapper">
    <!-- Top Header with System Name -->
    <header class="app-header shadow-sm">
        <div class="container d-flex align-items-center justify-content-between h-100">
            <div class="d-flex align-items-center">
                <span class="oi oi-bar-chart app-logo me-2"></span>
                <h1 class="app-title mb-0">智能学习分析系统</h1>
            </div>
            <div class="d-flex align-items-center gap-3">
                @if (isLoggedIn)
                {
                    <div class="dropdown">
                        <button class="btn bg-white border dropdown-toggle d-flex align-items-center gap-2 rounded-pill px-3 py-2 shadow-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 24px; height: 24px;">
                                <span class="oi oi-person" style="font-size: 0.8rem;"></span>
                            </div>
                            <span class="fw-bold text-secondary small">@username</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                            <li>
                                <a class="dropdown-item" href="/change-password">
                                    <span class="oi oi-key me-2"></span>修改密码
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <button class="dropdown-item text-danger" @onclick="Logout">
                                    <span class="oi oi-account-logout me-2"></span>退出登录
                                </button>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                     <a href="/login" class="btn btn-sm btn-primary rounded-pill px-3">登录</a>
                }
            </div>
        </div>
    </header>

    <!-- Selection Info Bar -->
    <div class="selection-bar bg-white border-bottom">
        <div class="container d-flex justify-content-between align-items-center h-100 py-2">
            <div class="current-selection text-secondary">
                <span class="oi oi-book me-2 text-primary"></span>
                @if (grade > 0)
                {
                    <span class="fw-bold text-dark">@grade 年级</span>
                    <span class="mx-2">|</span>
                    <span class="fw-bold text-dark">@subject</span>
                    <span class="mx-2">|</span>
                    <span class="fw-bold text-dark">@textbookVersion</span>
                }
                else
                {
                    <span>未选择课程</span>
                }
            </div>
            <a href="/?reselect=1" class="btn btn-sm btn-outline-primary rounded-pill px-3 transition-btn">
                <span class="oi oi-loop-circular me-1"></span>切换选择
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <main class="flex-grow-1 bg-light">
        <article class="content container py-4">
            @Body
        </article>
    </main>
</div>

@code {
    private int grade = 0;
    private string subject = "";
    private string textbookVersion = "";
    private bool isLoggedIn = false;
    private string username = "";

    [CascadingParameter]
    private Task<AuthenticationState> AuthStateTask { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (AuthStateTask != null)
        {
            var state = await AuthStateTask;
            // Check for User role specifically
            isLoggedIn = state.User.IsInRole("User");
            if (isLoggedIn)
            {
                var nicknameClaim = state.User.FindFirst("Nickname");
                username = nicknameClaim?.Value ?? state.User.Identity?.Name ?? "";
            }
        }
    }

    private async Task Logout()
    {
        var customAuth = (Study.Services.CustomAuthenticationStateProvider)AuthStateProvider;
        await customAuth.UpdateAuthenticationState(null);
        Nav.NavigateTo("/login", true);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                // Load Auth State from LocalStorage
                if (AuthStateProvider is Study.Services.CustomAuthenticationStateProvider customAuth)
                {
                    await customAuth.LoadStateAsync();
                }

                var cfg = await JS.InvokeAsync<Config>("loadConfig");
                grade = cfg.grade;
                subject = cfg.subject ?? "";
                textbookVersion = cfg.textbookVersion ?? "";
                
                var uri = Nav.Uri;
                var u = new Uri(uri);
                var path = u.AbsolutePath.ToLowerInvariant();
                var hasSelection = !string.IsNullOrEmpty(subject) && grade > 0;
                var onHome = path == "/";
                
                // If on home but has selection (and not explicitly reselecting), go to dashboard
                // Note: user might want to stay on home to reselect, but typically we redirect to dashboard
                // The "Switch Selection" button goes to "/" which allows re-selection.
                // We should check if we should auto-redirect.
                // If the user clicked "Switch Selection", they are on "/"
                // We don't want to bounce them back to dashboard immediately if they just arrived.
                // However, the previous logic did exactly that unless "?reselect=1".
                // I'll simplify: If on Home, stay on Home (to allow selection). 
                // If on other pages and no selection, go Home.
                
                if (!hasSelection && !onHome)
                {
                    Nav.NavigateTo("/", true);
                }
                else if (hasSelection && onHome)
                {
                    // If we have selection and are on home, usually we want to go to dashboard.
                    // But if the user explicitly clicked "Switch Selection" (which goes to /), 
                    // we should probably let them stay. 
                    // But how do we know?
                    // The previous code used "?reselect=1". I should probably keep using that or 
                    // change the link to "?reselect=1".
                    
                    // Let's check the query string
                     var reselect = u.Query.Contains("reselect=1");
                     if (!reselect)
                     {
                         Nav.NavigateTo("/dashboard", true);
                     }
                }
                
                StateHasChanged();
            }
            catch {}
        }
    }

    private class Config { public int grade { get; set; } public string? subject { get; set; } public string? textbookVersion { get; set; } }
}
