@page "/admin"
@layout AdminLayout
@attribute [Authorize(Roles = "Admin")]

<PageTitle>管理后台 - 首页</PageTitle>

<div class="row g-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm p-4">
            <h2 class="fw-bold text-primary mb-3">欢迎回来，管理员</h2>
            <p class="text-muted">这里是系统管理中心，您可以管理用户和邀请码。</p>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-5">
                <div class="mb-3 text-primary">
                    <span class="oi oi-people display-4"></span>
                </div>
                <h4 class="fw-bold">用户管理</h4>
                <p class="text-muted">查看用户列表，管理用户状态（停用/启用）</p>
                <a href="/admin/users" class="btn btn-outline-primary mt-2">进入管理</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-5">
                <div class="mb-3 text-success">
                    <span class="oi oi-key display-4"></span>
                </div>
                <h4 class="fw-bold">邀请码管理</h4>
                <p class="text-muted">批量生成邀请码，查看邀请码使用情况</p>
                <a href="/admin/invitations" class="btn btn-outline-success mt-2">进入管理</a>
            </div>
        </div>
    </div>
</div>
