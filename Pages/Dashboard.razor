@page "/dashboard"
@using Markdig
@attribute [Authorize(Roles = "User")]
@inject IJSRuntime JS
@inject HttpClient Http
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>学习中心</PageTitle>

<div class="container-fluid px-0">
    @if (!initialized)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (string.IsNullOrEmpty(subject) || grade == 0)
    {
        <div class="alert alert-warning m-3">请先在首页选择年级与学科</div>
    }
    else
    {
        @if (!hasData)
        {
            @* No Data State - Show Upload Directly *@
            <div class="container mt-4">
                <div class="text-center mb-4">
                    <h4 class="fw-bold text-secondary">欢迎来到学习中心</h4>
                    <p class="text-muted">暂无学习数据，请先上传一份作业进行分析</p>
                </div>
                <UploadSection Grade="@grade" Subject="@subject" Publisher="@textbookVersion" OnUploaded="OnUploaded" />
            </div>
        }
        else
        {
            @* Has Data State *@
            <div class="container mt-3">
                
                @* Analysis Section *@
                <div id="analysis-section" class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom-0 pt-3 pb-2">
                        <h5 class="card-title text-primary fw-bold mb-0">
                            <span class="oi oi-graph me-2"></span>学情分析
                        </h5>
                    </div>
                    <div class="card-body pt-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0 rounded-start ps-3">知识点</th>
                                        <th class="border-0">正确率</th>
                                        <th class="border-0 rounded-end pe-3">掌握等级</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var r in report)
                                {
                                    var badgeClass = r.mastery == "熟练掌握" ? "bg-success"
                                        : r.mastery == "掌握" ? "bg-primary"
                                        : r.mastery == "了解" ? "bg-warning text-dark"
                                        : "bg-danger";
                                    <tr>
                                        <td class="ps-3 fw-medium">
                                            <a href="/kp?kp=@Uri.EscapeDataString(r.knowledgePoint)" class="text-decoration-none text-dark stretched-link">
                                                @r.knowledgePoint
                                            </a>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="me-2">@string.Format("{0:P0}", r.accuracy)</span>
                                                <div class="progress flex-grow-1" style="height: 6px; width: 60px;">
                                                    <div class="progress-bar @(r.accuracy >= 0.8 ? "bg-success" : r.accuracy >= 0.6 ? "bg-primary" : "bg-danger")" 
                                                         role="progressbar" style="width: @(r.accuracy * 100)%"></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="pe-3">
                                            <span class="badge @badgeClass rounded-pill fw-normal px-3">@r.mastery</span>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                @* Navigation / Action Buttons *@
                <div class="row g-3 mb-4">
                    <div class="col-6 col-md-4">
                        <div class="card border-0 shadow-sm h-100 action-card" @onclick="ToggleUpload">
                            <div class="card-body text-center py-4">
                                <div class="icon-circle bg-primary bg-opacity-10 text-primary mx-auto mb-3">
                                    <span class="oi oi-cloud-upload fs-4"></span>
                                </div>
                                <h6 class="fw-bold mb-1">上传作业</h6>
                                <small class="text-muted">拍照或上传图片</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <div class="card border-0 shadow-sm h-100 action-card" @onclick="@GoPractice">
                            <div class="card-body text-center py-4">
                                <div class="icon-circle bg-success bg-opacity-10 text-success mx-auto mb-3">
                                    <span class="oi oi-task fs-4"></span>
                                </div>
                                <h6 class="fw-bold mb-1">专项练习</h6>
                                <small class="text-muted">针对薄弱点练习</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <div class="card border-0 shadow-sm h-100 action-card" @onclick="@NavigateToAdvice">
                            <div class="card-body text-center py-4">
                                <div class="icon-circle bg-info bg-opacity-10 text-info mx-auto mb-3">
                                    <span class="oi oi-people fs-4"></span>
                                </div>
                                <h6 class="fw-bold mb-1">学习顾问</h6>
                                <small class="text-muted">
                                    获取学习建议
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                @* Upload Section (Toggleable) *@
                @if (showUpload)
                {
                    <div id="upload-section" class="mb-4">
                        <UploadSection Grade="@grade" Subject="@subject" Publisher="@textbookVersion" 
                                     OnUploaded="OnUploaded" OnClose="CloseUpload" />
                    </div>
                }
            </div>
        }
    }
</div>

<style>
    .action-card {
        cursor: pointer;
        transition: all 0.3s ease;
    }
    .action-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
    }
    .action-card:active {
        transform: scale(0.98);
    }
    .icon-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .stretched-link::after {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1;
        content: "";
    }
    /* Fix for relative positioning for stretched-link */
    tr {
        position: relative;
    }
</style>

@code {
    private int grade;
    private string subject = "";
    private string textbookVersion = "";
    private bool initialized = false;
    private bool hasData = false;
    private bool showUpload = false;
    private string userId = "demo_user";

    private List<ReportItem> report = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)

    {
        if (firstRender)
        {
            try
            {
                var state = await AuthStateProvider.GetAuthenticationStateAsync();
                if (state.User.Identity?.IsAuthenticated ?? false)
                {
                    userId = state.User.Identity.Name ?? "demo_user";
                }

                var cfg = await JS.InvokeAsync<Config>("loadConfig");
                grade = cfg.grade;
                subject = cfg.subject ?? "";
                textbookVersion = cfg.textbookVersion ?? "";
                initialized = true;
                StateHasChanged();

                if (!string.IsNullOrEmpty(subject) && grade > 0)
                {
                    var res = await Http.GetFromJsonAsync<AnalyticsResponse>($"/api/analytics?grade={grade}&subject={subject}&userId={userId}");
                    report = res?.report ?? new List<ReportItem>();
                    hasData = report.Count > 0;
                    StateHasChanged();
                }
                else
                {
                    Nav.NavigateTo("/", true);
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error loading config: {ex.Message}");
            }
        }
        await JS.InvokeVoidAsync("renderMathJax");
    }

    private void GoPractice() => Nav.NavigateTo("/practice");

    private async Task ToggleUpload()
    {
        showUpload = !showUpload;
        if (showUpload)
        {
            // Give time for the element to render
            await Task.Delay(100);
            await JS.InvokeVoidAsync("scrollToElement", "upload-section");
        }
        else
        {
            await JS.InvokeVoidAsync("scrollToElement", "analysis-section");
        }
    }

    private async Task CloseUpload()
    {
        showUpload = false;
        await JS.InvokeVoidAsync("scrollToElement", "analysis-section");
    }

    private async Task OnUploaded()
    {
        showUpload = false;
        var res = await Http.GetFromJsonAsync<AnalyticsResponse>($"/api/analytics?grade={grade}&subject={subject}&userId={userId}");
        report = res?.report ?? new List<ReportItem>();
        hasData = report.Count > 0;
        StateHasChanged();
        await JS.InvokeVoidAsync("scrollToElement", "analysis-section");
    }

    private void NavigateToAdvice()
    {
        Nav.NavigateTo($"/advice?Grade={grade}&Subject={Uri.EscapeDataString(subject)}&Publisher={Uri.EscapeDataString(textbookVersion)}");
    }

    private class Config { public int grade { get; set; } public string? subject { get; set; } public string? textbookVersion { get; set; } }
    private class AnalyticsResponse { public List<ReportItem> report { get; set; } = new(); }
    private class ReportItem { public string knowledgePoint { get; set; } = ""; public double accuracy { get; set; } public string mastery { get; set; } = ""; }
}
