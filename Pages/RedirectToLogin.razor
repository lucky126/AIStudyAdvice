@inject NavigationManager Nav
@code {
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            var uri = Nav.Uri;
            if (uri.ToLower().Contains("/admin"))
            {
                Nav.NavigateTo("/admin/login", true);
            }
            else
            {
                Nav.NavigateTo("/login", true);
            }
        }
    }
}