@page "/change-password"
@inject Study.Services.AuthService Auth
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@using Study.Services

<PageTitle>修改密码</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 text-center">
                    <h4 class="fw-bold text-primary">修改密码</h4>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success">@successMessage</div>
                    }
                    @if (!string.IsNullOrEmpty(error))
                    {
                        <div class="alert alert-danger">@error</div>
                    }

                    <div class="mb-3">
                        <label class="form-label">原密码</label>
                        <input type="password" class="form-control" @bind="oldPassword" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">新密码</label>
                        <input type="password" class="form-control" @bind="newPassword" />
                    </div>
                    <div class="mb-4">
                        <label class="form-label">确认新密码</label>
                        <input type="password" class="form-control" @bind="confirmPassword" />
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-primary w-100" @onclick="DoChangePassword" disabled="@isProcessing">
                            @if (isProcessing)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>提交中...</span>
                            }
                            else
                            {
                                <span>确认修改</span>
                            }
                        </button>
                    </div>
                    <div class="text-center">
                        <a href="/" class="text-decoration-none small text-muted">返回首页</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string oldPassword = "";
    private string newPassword = "";
    private string confirmPassword = "";
    private string error = "";
    private string successMessage = "";
    private bool isProcessing = false;
    private string username = "";

    [CascadingParameter]
    private Task<AuthenticationState> AuthStateTask { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var state = await AuthStateTask;
        if (!state.User.IsInRole("User"))
        {
            Nav.NavigateTo("/login");
            return;
        }
        username = state.User.Identity?.Name ?? "";
    }

    private async Task DoChangePassword()
    {
        error = "";
        successMessage = "";

        if (string.IsNullOrWhiteSpace(oldPassword) || string.IsNullOrWhiteSpace(newPassword))
        {
            error = "密码不能为空";
            return;
        }

        if (newPassword != confirmPassword)
        {
            error = "两次输入的新密码不一致";
            return;
        }

        if (newPassword.Length < 8 || !System.Text.RegularExpressions.Regex.IsMatch(newPassword, @"^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)"))
        {
            error = "新密码必须8位以上，且包含大写字母、小写字母和数字";
            return;
        }

        isProcessing = true;
        try
        {
            var oldHash = AuthService.HashPassword(oldPassword);
            var newHash = AuthService.HashPassword(newPassword);

            await Auth.ChangePasswordAsync(username, oldHash, newHash);
            
            successMessage = "密码修改成功！请重新登录。";
            oldPassword = "";
            newPassword = "";
            confirmPassword = "";
            
            // Wait 2 seconds then logout and redirect
            await Task.Delay(2000);
            
            var customAuth = (CustomAuthenticationStateProvider)AuthStateProvider;
            await customAuth.UpdateAuthenticationState(null, "UserSession");
            Nav.NavigateTo("/login", true);
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isProcessing = false;
        }
    }
}
